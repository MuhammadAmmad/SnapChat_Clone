<?xml version="1.0" encoding="utf-8"?>
<manifest package="app.delchat.heaven.zion.delchat"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true"/>

    <application
        android:name=".SnapchatCloneApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Chatup">
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.Login_Activity"
            android:label="@string/title_activity_login_"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.Signup_Activity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_signup_"
            android:parentActivityName=".app.delchat.heaven.zion.delchat.ui.Login_Activity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.EditFriendsActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_edit_friends"
            android:parentActivityName=".app.delchat.heaven.zion.delchat.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        </activity>
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.RecipientActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_recipient"
            android:parentActivityName=".app.delchat.heaven.zion.delchat.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar">
        </activity>
        <activity
            android:name=".app.delchat.heaven.zion.delchat.ui.ViewImage"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/title_activity_view_image"
            android:parentActivityName=".app.delchat.heaven.zion.delchat.ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.DeviceDefault.Light.DarkActionBar">

        </activity>
    </application>

</manifest>

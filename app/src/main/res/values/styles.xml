<resources>
    <style name="Theme.Chatup" parent="@style/Theme.AppCompat.Light">
        <item name="actionBarItemBackground">@drawable/selectable_background_chatup</item>
        <item name="popupMenuStyle">@style/PopupMenu.Chatup</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Chatup</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Chatup</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Chatup</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Chatup</item>
        <item name="actionModeBackground">@drawable/cab_background_top_chatup</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_chatup</item>
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Chatup</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.Chatup.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.Chatup.LigthPurpleBackground</item>
        <item name="android:gridViewStyle">@style/Theme.Chatup.LigthPurpleBackground.GridView</item>
        
    </style>
    <style name="Theme.Chatup.LigthPurpleBackground">
        <item name="android:background">@color/light_purple_background</item>
    </style>

    <style name="Theme.Chatup.LigthPurpleBackground.GridView">
        <item name="android:padding">@dimen/user_grid_specing</item>
    </style>
    
    <style name="Theme.Chatup.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.Chatup" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="background">@drawable/ab_solid_chatup</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_chatup</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_chatup</item>
        <item name="progressBarStyle">@style/ProgressBar.Chatup</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.Chatup.TitleTextStyle</item>
    </style>
    <style name="ActionBar.Solid.Chatup.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBar.Transparent.Chatup" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="background">@drawable/ab_transparent_chatup</item>
        <item name="progressBarStyle">@style/ProgressBar.Chatup</item>
    </style>

    <style name="PopupMenu.Chatup" parent="@style/Widget.AppCompat.Light.PopupMenu">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chatup</item>
    </style>

    <style name="DropDownListView.Chatup" parent="@style/Widget.AppCompat.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_chatup</item>
    </style>

    <style name="ActionBarTabStyle.Chatup" parent="@style/Widget.AppCompat.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_chatup</item>
    </style>

    <style name="DropDownNav.Chatup" parent="@style/Widget.AppCompat.Light.Spinner.DropDown.ActionBar">
        <item name="android:background">@drawable/spinner_background_ab_chatup</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chatup</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_chatup</item>
    </style>

    <style name="ProgressBar.Chatup" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_chatup</item>
    </style>

    <style name="ActionButton.CloseMode.Chatup" parent="@style/Widget.AppCompat.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_chatup</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Chatup.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Chatup</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Chatup</item>
    </style>


    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:scaleType">fitStart</item>
        <item name="android:src">@drawable/background</item>
    </style>

    <style name="AuthTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">60dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/app_title</item>
    </style>

    <style name="AuthSubTitle" parent="AuthTitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textSize">13dp</item>
        <item name="android:layout_below">@+id/title</item>
        <item name="android:layout_alignParentTop">false</item>
        <item name="android:text">@string/app_sub_title</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@+id/subTitle</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
    </style>

    <style name="AuthEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/lightGray</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AuthSubmitButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@+id/editTextLayout</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="AuthSignUpButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_below">@+id/editTextLayout</item>
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
